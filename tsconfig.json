  "compilerOptions": {
    "noEmit": false,
    "allowJs": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "target": "ES5",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2015"],
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
