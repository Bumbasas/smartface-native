{
  "compilerOptions": {
    "noEmit": false,
    "allowJs": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "dist",
    "target": "ES5",
    "esModuleInterop": true,
    "lib": ["ES2015"]
  },
  "include": ["./src/**/*"],
  "files": [".types/typings.d.ts", ".types/missings-android.d.ts", ".types/missings-ios.d.ts"],
  "exclude": ["dist", "node_modules", "tests/**/*", "**/analysis.js"]
}
